<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/brand_secondary_variant"
    app:strokeWidth="1dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Border Left Simulation -->
        <View
            android:id="@+id/left_border"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:background="@color/brand_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="24dp"
            app:layout_constraintStart_toEndOf="@id/left_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/repair_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_delete_repair"/>

            <TextView
                android:id="@+id/repair_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.00â‚¬"
                android:textColor="@color/success_color"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/repair_description"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/repair_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/repair_cost"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/repair_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2023-10-15"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/repair_date_label"
                app:layout_constraintStart_toEndOf="@id/repair_date_label"
                app:layout_constraintBaseline_toBaselineOf="@id/repair_date_label"/>

            <ImageButton
                android:id="@+id/btn_delete_repair"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Delete repair"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@color/text_secondary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
